{
  "compilerOptions": {
    "target": "ES2020",                         // Modern JS output
    "module": "ESNext",                       // Node.js compatible module
    "moduleResolution": "node",                 // Resolve modules like Node.js
    "rootDir": "src",                         // Your TypeScript source folder
    "outDir": "dist",                         // Output compiled files here
    "esModuleInterop": true,                    // Import default exports properly
    "forceConsistentCasingInFileNames": true,   // Enforce consistent imports
    "strict": true,                             // Enable all strict type-checking options
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "baseUrl": "./",                            // For module aliases
    "paths": {
      "@config/*":["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@middleware/*": ["src/middleware/*"],
      "@utils/*":["src/utils/*"]
    },
    "resolveJsonModule": true,                  // Import JSON files
    "types": ["node"]                           // Include Node.js types
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist","migration","seeders"]
}